{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // https://esbuild.github.io/content-types/#typescript
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,

    // affects `tsc` only
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  }
}
